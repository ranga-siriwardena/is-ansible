[Unit]
Description=WSO2 Identity Server
After=network.target

[Service]
ExecStart={{ setup_path }}/{{ product_name }}/{{ product_version }}/{{product_home}}/bin/wso2server.sh start
ExecStop={{ setup_path }}/{{ product_name }}/{{ product_version }}/{{product_home}}/bin/wso2server.sh stop
ExecRestart={{ setup_path }}/{{ product_name }}/{{ product_version }}/{{product_home}}/bin/wso2server.sh restart
PIDFile={{ setup_path }}/{{ product_name }}/{{ product_version }}/{{product_home}}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
